<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".control"
    android:clickable="true"
    android:background="@color/cool_blue">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FWD"
        android:id="@+id/FWD"
        android:width="100dp"
        android:layout_above="@+id/Right"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REV"
        android:id="@+id/REV"
        android:width="100dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/FWD"
        android:layout_alignStart="@+id/FWD" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/Left"
        android:width="100dp"
        android:layout_above="@+id/REV"
        android:layout_toLeftOf="@+id/REV"
        android:layout_toStartOf="@+id/REV" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/Right"
        android:width="100dp"
        android:layout_above="@+id/REV"
        android:layout_toRightOf="@+id/FWD"
        android:layout_toEndOf="@+id/FWD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=">data"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:width="200dp"
        android:background="@color/abc_input_method_navigation_guard"
        android:height="160dp"
        android:textColor="#1aec0b"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:layout_alignRight="@+id/Right"
        android:layout_alignEnd="@+id/Right"
        android:layout_alignLeft="@+id/Left"
        android:layout_alignStart="@+id/Left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
